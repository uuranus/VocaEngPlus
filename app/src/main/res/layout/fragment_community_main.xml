<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CommunityMainFramgent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/searchCategory"
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"
            android:hint="검색할 단어장 이름을 입력하세요"
            android:inputType="text"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/main_font"/>

        <ImageButton
            android:id="@+id/searchbtn"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_search"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@drawable/gradation"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sortdownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="다운로드 순"
            android:gravity="center"
            android:background="@drawable/gradation"
            android:fontFamily="@font/main_font"
            android:textSize="12sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/sortlike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="좋아요 순"
            android:gravity="center"
            android:background="@drawable/gradation"
            android:fontFamily="@font/main_font"
            android:textSize="12sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/sortrecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="업로드 순"
            android:gravity="center"
            android:background="@drawable/gradation"
            android:fontFamily="@font/main_font"
            android:textSize="12sp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/communityrecyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>
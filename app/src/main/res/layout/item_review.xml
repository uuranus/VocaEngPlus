<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.vocaengplus.vocaengplus.model.data.Word" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/title_body_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/word"
            style="@style/TextAppearance.VocaEngPlus.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{item.word}"
            tools:text="VocaEngPlus" />

        <ImageView
            android:id="@+id/moreInfoImageView"
            style="@style/TextAppearance.VocaEngPlus.Body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/rightarrow" />

    </LinearLayout>
</layout>
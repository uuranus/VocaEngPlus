<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="[단어 검색/번역]"
                android:textColor="@color/black"
                android:fontFamily="@font/bold_font"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="번역은 NAVER PAPAGO로 진행됩니다."
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:textSize="12sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="[번역 주의사항]"
                android:textColor="@color/black"
                android:fontFamily="@font/bold_font"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="번역된 문장이 40자를 넘어갈 경우, 앞에서 40자까지만 잘린 채 저장이 됩니다."
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="영단어는 특수문자(@#$%^&amp;*+/&lt;&gt;=[].\)와 한국어를 제외한 2~40자의 영문자 또는 숫자여야 합니다."
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="한국어 뜻은 특수문자(@#$%^\&amp;*+/&lt;&gt;=)와 영어를 제외한 1~40자의 한글 또는 숫자여야 합니다."
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이 때, 한국어 뜻에는 자음 또는 모음만 있는 글자를 포함할 수 없습니다. (ex. ㅇㅇ)"
                    android:textColor="@color/black"
                    android:fontFamily="@font/main_font"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
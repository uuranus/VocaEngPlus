<resources>
    <!-- Base application theme. -->
    <style name="Theme.VocaEngPlus" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/darkblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/main_font</item>
        <item name="android:fontFamily">@font/main_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Theme.VocaEngPlus.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="ThemeOverlay.VocaEngPlus.AppBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Theme.VocaEngPlus.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="postSplashScreenTheme">@style/Theme.VocaEngPlus</item>
    </style>

</resources>